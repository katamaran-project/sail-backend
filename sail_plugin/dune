(env
  (dev
    (flags (:standard -warn-error -A))))

(executable
  (name sail_plugin_katamaran)
  (modes
    (native plugin))
  (libraries libsail nanosail slang)
  (embed_in_plugin_libraries nanosail slang))

(install
  (section
    (site
      (libsail plugins)))
  (package sail_katamaran_backend)
  (files sail_plugin_katamaran.cmxs))
