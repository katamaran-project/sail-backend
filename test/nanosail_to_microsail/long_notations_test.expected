From Coq Require Import
     Lists.List
     Strings.String
     ZArith.BinInt.

From Katamaran Require Import
     Semantics.Registers
     Program.

Import ctx.notations
       ctx.resolution
       ListNotations.

Local Open Scope string_scope.
Local Open Scope list_scope.



(*** TYPES ***)

Import DefaultBase.



(*** PROGRAM ***)

Module Import LongProgram <: Program DefaultBase.

  Section FunDeclKit.

    Inductive Fun : PCtx -> Ty -> Set :=
    | very_long_naaaaaaaaaaaaaaaaame : Fun
        ["l" ∷ (ty.list ty.int); "b" ∷ ty.bool; "n" ∷ ty.int]
        (ty.list (ty.list (ty.list ty.bool))).

    Definition 𝑭  : PCtx -> Ty -> Set := Fun.
    Definition 𝑭𝑿 : PCtx -> Ty -> Set := fun _ _ => Empty_set.
    Definition 𝑳  : PCtx -> Set := fun _ => Empty_set.

  End FunDeclKit.

  Include FunDeclMixin DefaultBase.

  Section FunDefKit.

    Definition fun_very_long_naaaaaaaaaaaaaaaaame : Stm
        ["l" ∷ (ty.list ty.int); "b" ∷ ty.bool; "n" ∷ ty.int]
        (ty.list (ty.list (ty.list ty.bool))) :=
      stm_exp
        (exp_list
          [exp_list
              [exp_list [exp_true]; exp_list [exp_false]; exp_list [exp_false]];
            exp_list
              [exp_list [exp_false]; exp_list [exp_true]; exp_list [exp_false]];
            exp_list
              [exp_list [exp_false]; exp_list [exp_false]; exp_list [exp_true]]]).

    Definition FunDef {Δ τ} (f : Fun Δ τ) : Stm Δ τ :=
      match f in Fun Δ τ return Stm Δ τ with
      | very_long_naaaaaaaaaaaaaaaaame => fun_very_long_naaaaaaaaaaaaaaaaame
      end.

  End FunDefKit.

  Include DefaultRegStoreKit DefaultBase.

  Section ForeignKit.
    Definition Memory : Set := unit.
    Definition ForeignCall {σs σ} (f : 𝑭𝑿 σs σ) (args : NamedEnv Val σs)
      (res : string + Val σ) (γ γ' : RegStore) (μ μ' : Memory) : Prop := False.
    Lemma ForeignProgress {σs σ} (f : 𝑭𝑿 σs σ) (args : NamedEnv Val σs) γ μ :
      exists γ' μ' res, ForeignCall f args res γ γ' μ μ'.
    Proof. destruct f. Qed.
  End ForeignKit.

  Include ProgramMixin DefaultBase.

End LongProgram.

